<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_loading_view_height">

    <TextView
            android:id="@+id/no_results_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_more_results" />

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_no_results"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/no_results_tv"
            android:layout_centerVertical="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="no_results_lottie.json"
            app:lottie_loop="true"
            app:lottie_speed="0.5"/>

</RelativeLayout>